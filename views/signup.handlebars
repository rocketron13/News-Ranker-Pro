{{> topBanner}}

<section class="card" id="signUpSection">
  <h2>Sign Up</h2>

<form class="authenticationForm" id="signUpForm" action="/signup" method="POST">

  <div class="inputGroup">
    <label for="firstNameInput">First Name:</label>
    <input id="firstNameInput" name="firstName" type="text" value="{{user.firstName}}" placeholder="Enter first name...">
  </div>

  <div class="inputGroup">
    <label for="lastNameInput">Last Name:</label>
    <input id="lastNameInput" name="lastName" type="text" value="{{user.lastName}}" placeholder="Enter last name...">
  </div>

  <div class="inputGroup">
    <label for="usernameInput">Username:</label>
    <input id="usernameInput" name="username" type="text" value="{{user.username}}" placeholder="Enter username...">
  </div>

  <div class="inputGroup">
    <label for="emailInput">Email:</label>
    <input id="emailInput" name="email" type="text" value="{{user.email}}" placeholder="Enter email...">
  </div>

  <div class="inputGroup">
    <label for="passwordInput">Password:</label>
    <input id="passwordInput" name="password" type="password" placeholder="Enter password...">
  </div>

  <div class="inputGroup">
    <label for="confirmPasswordInput">Confirm Password:</label>
    <input id="confirmPasswordInput" name="confirmPassword" type="password" placeholder="Confirm password...">
  </div>

  <button id="signUpButton" type="submit">Sign Up</button>
  <a href="/login" class="btn">Already have an account? Log in</a>
</form>

<ul id='signup-errors' class="error-list">
{{#if hasErrors}}
    {{#each errors}}
    <li>
        {{this}}
    </li>
    {{/each}}
{{/if}}
</ul>


  <div id="usernameMsg"></div>
</section>

<script src="/public/js/user.js"></script>
