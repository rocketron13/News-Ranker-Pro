{{> topBanner}}

<section class="card" id="signUpSection">
  <h2>Sign Up</h2>

<form class="authenticationForm" id="signUpForm" action="users/login" method="POST">

  <div class="inputGroup">
    <label for="usernameInput">Username:</label>
    <input id="usernameInput" name="username" type="text" placeholder="Enter username...">
  </div>

  <div class="inputGroup">
    <label for="passwordInput">Password:</label>
    <input id="passwordInput" name="password" type="password" placeholder="Enter password...">
  </div>

  <div class="inputGroup">
    <label for="confirmPasswordInput">Confirm Password:</label>
    <input id="confirmPasswordInput" name="confirmPassword" type="password" placeholder="Confirm password...">
  </div>

  <button id="signUpButton" type="submit">Sign Up</button>
  <a href="/login" class="btn">Already have an account? Log in</a>
</form>


  <div id="usernameMsg"></div>
</section>

<script src="/public/js/user.js"></script>
